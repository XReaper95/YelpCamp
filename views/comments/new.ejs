<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 class="formTitle">Add New Comment to <%=campground.name%> </h1>
    
    <div class="myForm">
      <form action="/campgrounds/<%=campground._id%>/comments" method="post">
        <div class="form-group">
          <textarea class="form-control" name="comment[text]" cols="30" rows="10" placeholder="Say something about the place" required></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
      </form>
     
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>