<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 class="formTitle">Edit Comment</h1>

    <div class="myForm">
      <form action="/campgrounds/<%=campID%>/comments/<%=comment._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <textarea class="form-control" name="comment[text]" cols="30" rows="10"><%= comment.text %></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
      </form>

      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>